<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.lprub.contactos.actividades.FragmentLista"
        android:id="@+id/fragment1"
        android:layout_weight="2"
        tools:layout="@layout/activity_actividad_principal"/>

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.lprub.contactos.actividades.FragmentContacto"
        android:id="@+id/fragment2"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        tools:layout="@layout/activity_actividad_contacto"
        />
</LinearLayout>